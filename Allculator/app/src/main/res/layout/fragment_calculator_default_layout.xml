<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="clear"
            android:text="C"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="7"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="4"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="sign"
            android:text="±"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="parenthesis"
            android:text="()"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="8"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="5"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="2"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="0"
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="percent"
            android:text="%"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="9"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="6"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="number"
            android:text="3"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="dot"
            android:text="."
            android:textSize="25sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="operator"
            android:text="+"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="operator"
            android:text="-"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="operator"
            android:text="x"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="operator"
            android:text="÷"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="simpleClicked"
            android:tag="equal"
            android:text="="
            android:textSize="25sp" />
    </LinearLayout>

</LinearLayout>