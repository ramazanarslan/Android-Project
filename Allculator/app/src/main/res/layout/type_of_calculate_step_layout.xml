<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <co.ceryle.radiorealbutton.RadioRealButtonGroup
        android:id="@+id/btn_group_hesaplama_tipi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rrbg_animateDrawables_enter="overshoot"
        app:rrbg_animateTexts_enter="overshoot"
        app:rrbg_dividerColor="@android:color/black"
        app:rrbg_dividerSize="1dp"
        app:rrbg_radius="10dp"
        app:rrbg_selectorColor="@android:color/holo_red_dark"
        app:rrbg_selectorSize="6dp">

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/btn_gelir_tutarı_hesaplama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@android:color/holo_blue_dark"
            app:rrb_text="Gelir tutarı hesaplama"
            app:rrb_textColor="@android:color/black"
            app:rrb_textSize="12dp"
            />

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/btn_maliyet_tutarı_hesaplama"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@android:color/holo_blue_dark"
            app:rrb_text="Maliyet tutarı hesaplama"
            app:rrb_textColor="@android:color/black"
            app:rrb_textSize="12dp"/>

        <co.ceryle.radiorealbutton.RadioRealButton
            android:id="@+id/btn_kar_zarar_oranı_hesaplama"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:rrb_ripple="true"
            app:rrb_rippleColor="@android:color/holo_blue_dark"
            app:rrb_text="Kar oranı hesaplama"
            app:rrb_textColor="@android:color/black"
            app:rrb_textSize="12dp"/>
    </co.ceryle.radiorealbutton.RadioRealButtonGroup>


</LinearLayout>