<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLogoColor"
    tools:context="com.aprigoldcorporation.allculator.ui.activities.SplashScreenActivity">

    <com.airbnb.lottie.LottieAnimationView
                                           android:layout_width="75dp"
                                           android:layout_height="133dp"
                                           android:layout_centerHorizontal="true"
                                           android:layout_centerVertical="true"
                                           android:scaleType="centerCrop"
                                           app:lottie_autoPlay="true"
                                           app:lottie_fileName="logoanime2.json"
                                           app:lottie_loop="false"/>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="ApriGold Corp. Version 1.2.1 "
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Media"
        android:textColor="@color/colorSmokeWhite"
        />

</RelativeLayout>
