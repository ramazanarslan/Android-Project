<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.65">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/percentage"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/first_currency_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Avustralya DolarÄ±"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/first_currency_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_currency_text"
                android:text="1.093$"
                android:textAlignment="center" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/second_currency_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Danimarka Kronu"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/second_currency_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_currency_text"
                android:text="1.093$"
                android:textAlignment="center" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.65">



        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:src="@drawable/percentage"/>

    </LinearLayout>


</LinearLayout>
